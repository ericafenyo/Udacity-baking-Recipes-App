<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eric.bakingrecipes.Activities.DetailsActivity">

    <!--TODO: comment on this-->

    <TextView
        android:id="@+id/image_detail_serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="servings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_detail_thumbnail" />

    <TextView
        android:id="@+id/image_detail_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ingredients"
        app:layout_constraintStart_toStartOf="@+id/card_ingredients_button_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/image_detail_thumbnail" />

    <TextView
        android:id="@+id/image_detail_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="steps"
        app:layout_constraintEnd_toStartOf="@+id/image_detail_serving"
        app:layout_constraintStart_toEndOf="@+id/image_detail_ingredients"
        app:layout_constraintTop_toBottomOf="@+id/image_detail_thumbnail" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_ingredients_button_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_detail_steps">

        <TextView
            android:padding="@dimen/gap"
            android:id="@+id/text_detail_ingredients_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrot" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/recyclerView_card_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_ingredients_button_wrapper">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_detail_steps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/image_detail_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</android.support.constraint.ConstraintLayout>
